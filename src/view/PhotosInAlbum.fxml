<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>

<!-- PhotosInAlbum.fxml -->
<!-- This XML file defines the layout for managing photos in an album. -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UniqueOAController">
   <children>
      <!-- Button for adding a new photo to the album -->
      <Button fx:id="addPhoto" layoutX="14.0" layoutY="350.0" mnemonicParsing="false" onAction="#addPhoto" text="Add Photo" />

      <!-- Button for removing a selected photo from the album -->
      <Button fx:id="removePhoto" layoutX="109.0" layoutY="350.0" mnemonicParsing="false" onAction="#removePhoto" text="Remove Photo" />

      <!-- ListView displaying the list of tags associated with the photos -->
      <ListView fx:id="tagList" layoutX="378.0" layoutY="44.0" prefHeight="44.0" prefWidth="190.0" />

      <!-- Label indicating the presence of tags -->
      <Label fx:id="tags" layoutX="440.0" layoutY="27.0" text="Tags:" />

      <!-- TextField for entering a new tag -->
      <TextField fx:id="tag" layoutX="392.0" layoutY="139.0" prefHeight="27.0" prefWidth="177.0" promptText="Name Example: location" />

      <!-- Button for adding a new tag -->
      <Button fx:id="addTag" layoutX="436.0" layoutY="208.0" mnemonicParsing="false" onAction="#addTag" text="Add Tag" />

      <!-- Label indicating the presence of a caption -->
      <Label fx:id="caption" layoutX="440.0" layoutY="246.0" text="Caption:" />

      <!-- TextField for entering or updating the caption -->
      <TextField fx:id="capField" layoutX="380.0" layoutY="263.0" />

      <!-- Button for updating the caption -->
      <Button fx:id="updateCaption" layoutX="406.0" layoutY="296.0" mnemonicParsing="false" onAction="#addCaption" text="Update Caption" />

      <!-- ToggleButton for navigating to the next photo -->
      <ToggleButton fx:id="next" layoutX="226.0" layoutY="350.0" mnemonicParsing="false" onAction="#next" text="Next" />

      <!-- ToggleButton for navigating to the previous photo -->
      <ToggleButton fx:id="prev" layoutX="278.0" layoutY="350.0" mnemonicParsing="false" onAction="#prev" text="Previous" />

      <!-- Button for switching to move or copy mode -->
      <Button fx:id="moveOrCopy" layoutX="367.0" layoutY="350.0" mnemonicParsing="false" onAction="#switchToMC" text="Move or Copy" />

      <!-- Button for deleting a tag -->
      <Button fx:id="deleteTag" layoutX="429.0" layoutY="88.0" mnemonicParsing="false" onAction="#deleteTag" text="Delete Tag" />

      <!-- Button for returning to the previous screen -->
      <Button fx:id="back" layoutX="536.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />

      <!-- Button for switching to display mode -->
      <Button fx:id="displayMode" layoutX="485.0" layoutY="350.0" mnemonicParsing="false" onAction="#displayMode" text="Display Mode" />

      <!-- ListView displaying the list of photos -->
      <ListView fx:id="photosList" layoutX="17.0" layoutY="14.0" onMouseClicked="#updateTag" prefHeight="331.0" prefWidth="355.0" />

      <!-- TextField for entering a value for a new tag -->
      <TextField fx:id="value" layoutX="391.0" layoutY="173.0" prefHeight="27.0" prefWidth="177.0" promptText="Value Example: New York" />

      <!-- Label providing instructions for entering new tag information -->
      <Label fx:id="tagLabel" layoutX="374.0" layoutY="122.0" prefHeight="17.0" prefWidth="222.0" text="Enter new Tag Information Below:" />
   </children>
</AnchorPane>