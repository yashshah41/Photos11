<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!-- HomePage.fxml -->
<!-- This XML file defines the layout and controls for the home page of the application. -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeController">
   <children>
      <!-- Label welcoming the user -->
      <Label alignment="CENTER" layoutX="260.0" layoutY="15.0" prefHeight="40.0" prefWidth="90.0" text="Welcome to Your Space" />
      
      <!-- ListView to display user's content -->
      <ListView fx:id="contentList" layoutX="20.0" layoutY="50.0" prefHeight="310.0" prefWidth="250.0" />
      
      <!-- Label indicating the section -->
      <Label layoutX="100.0" layoutY="30.0" text="Your Content:" />
      
      <!-- Text field for user input -->
      <TextField fx:id="editName" layoutX="400.0" layoutY="60.0" />
      <TextField fx:id="editNum" layoutX="400.0" layoutY="100.0" />
      <TextField fx:id="editRange" layoutX="400.0" layoutY="140.0" />
      
      <!-- Labels for text fields -->
      <Label layoutX="350.0" layoutY="60.0" text="Name:" />
      <Label layoutX="280.0" layoutY="100.0" text="Number of Items:" />
      <Label layoutX="300.0" layoutY="140.0" text="Range of Dates:" />
      
      <!-- Button to delete content -->
      <Button fx:id="deleteButton" layoutX="15.0" layoutY="360.0" mnemonicParsing="false" onAction="#deleteContent" text="Delete" />
      
      <!-- Button to create new content -->
      <Button fx:id="createContent" layoutX="410.0" layoutY="310.0" mnemonicParsing="false" onAction="#createNewContent" prefHeight="30.0" prefWidth="140.0" text="Create New Content" />
      
      <!-- Label indicating the section -->
      <Label layoutX="420.0" layoutY="240.0" prefHeight="20.0" prefWidth="130.0" text="Create New Content:" />
      
      <!-- Text field for input -->
      <TextField fx:id="contentName" layoutX="400.0" layoutY="270.0" promptText="Name" />
      
      <!-- Buttons for navigation -->
      <Button fx:id="viewContent" layoutX="80.0" layoutY="360.0" mnemonicParsing="false" onAction="#viewContent" prefHeight="30.0" prefWidth="100.0" text="View Content" />
      <Button fx:id="searchButton" layoutX="190.0" layoutY="360.0" mnemonicParsing="false" onAction="#switchToSearch" prefHeight="30.0" prefWidth="108.0" text="Search Items" />
      <Button fx:id="logoutButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#logOut" text="Logout" />
      
      <!-- Label indicating the section -->
      <Label layoutX="440.0" layoutY="30.0" text="Edit Content:" />
      
      <!-- Button to finish editing -->
      <Button fx:id="finishButton" layoutX="440.0" layoutY="180.0" mnemonicParsing="false" onAction="#renameContent" text="Finish Edit" />
   </children>
</AnchorPane>
