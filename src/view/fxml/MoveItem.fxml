<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<!-- MoveItem.fxml -->
<!-- This XML file defines the layout and controls for moving or copying items within the application. -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MoveItemController">
   <children>
      <!-- Label indicating the purpose of the screen -->
      <Label layoutX="246.0" layoutY="14.0" text="Move or Copy Items" />
      
      <!-- Label indicating the destination for moving -->
      <Label layoutX="93.0" layoutY="43.0" text="Move To:" />
      
      <!-- ListView displaying items for moving -->
      <ListView fx:id="itemsToMoveList" layoutX="25.0" layoutY="60.0" prefHeight="256.0" prefWidth="221.0" />
      
      <!-- Label indicating the destination for copying -->
      <Label layoutX="437.0" layoutY="43.0" text="Copy To:" />
      
      <!-- ListView displaying items for copying -->
      <ListView fx:id="itemsToCopyList" layoutX="358.0" layoutY="60.0" prefHeight="256.0" prefWidth="213.0" />
      
      <!-- Button for executing the move action -->
      <Button fx:id="moveButton" layoutX="106.0" layoutY="316.0" mnemonicParsing="false" onAction="#moveItem" text="Move" />
      
      <!-- Button for executing the copy action -->
      <Button fx:id="copyButton" layoutX="445.0" layoutY="316.0" mnemonicParsing="false" onAction="#copyItem" text="Copy" />
      
      <!-- Button for canceling the operation -->
      <Button fx:id="cancelButton" layoutX="47.0" layoutY="359.0" mnemonicParsing="false" onAction="#cancel" text="Cancel" />
      
      <!-- Button for finalizing the operation -->
      <Button fx:id="finishButton" layoutX="504.0" layoutY="359.0" mnemonicParsing="false" onAction="#finish" text="Finish" />
   </children>
</AnchorPane>