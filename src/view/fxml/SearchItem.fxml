<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!-- searchItem.fxml -->
<!-- This XML file defines the layout for searching items with date range and tags. -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SearchController">
   <children>
      <!-- Label for the title "Search" -->
      <Label layoutX="263.0" layoutY="17.0" text="Search" />
      
      <!-- TextField for entering the beginning date -->
      <TextField fx:id="startDate" layoutX="38.0" layoutY="74.0" promptText="Start Date" />
      
      <!-- Label for indicating the search by date range -->
      <Label layoutX="38.0" layoutY="42.0" text="Search by Date Range:" />
      
      <!-- TextField for entering the end date -->
      <TextField fx:id="endDate" layoutX="38.0" layoutY="119.0" promptText="End Date" />
      
      <!-- Label for indicating the search by tags -->
      <Label layoutX="72.0" layoutY="159.0" text="Search by Tags:" />
      
      <!-- TextField for entering tags -->
      <TextField fx:id="tag" layoutX="39.0" layoutY="187.0" promptText="Tag" />
      
      <!-- ListView for displaying searched tags -->
      <ListView fx:id="searchedTag" layoutX="38.0" layoutY="277.0" prefHeight="101.0" prefWidth="167.0" />
      
      <!-- Label for indicating the tags being searched -->
      <Label layoutX="55.0" layoutY="260.0" text="Tags being Searched:" />
      
      <!-- ListView for displaying search results -->
      <ListView fx:id="result" layoutX="339.0" layoutY="49.0" prefHeight="254.0" prefWidth="231.0" />
      
      <!-- Label for indicating the search results -->
      <Label layoutX="430.0" layoutY="25.0" text="Results:" />
      
      <!-- Button for triggering the search -->
      <Button fx:id="searchButton" layoutX="92.0" layoutY="222.0" mnemonicParsing="false" onAction="#searchPhotos" text="Search" />
      
      <!-- Button for creating a new album from search results -->
      <Button fx:id="createButton" layoutX="404.0" layoutY="314.0" mnemonicParsing="false" text="Create Album" />
      
      <!-- TextField for entering the name of the new album -->
      <TextField fx:id="albumName" layoutX="372.0" layoutY="351.0" promptText="Name" />
      
      <!-- Button for returning to the user home screen -->
      <Button fx:id="backButton" layoutX="14.0" layoutY="12.0" mnemonicParsing="false" onAction="#backToUserHome" text="Back" />
   </children>
</AnchorPane>